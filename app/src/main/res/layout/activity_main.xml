<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chipotle"
        android:id="@+id/main_chipotlebutton"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/main_starbutton"
        android:layout_alignEnd="@+id/main_starbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starbucks"
        android:id="@+id/main_starbutton"
        android:layout_above="@+id/main_chipotlebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/union"
        android:id="@+id/main_unionbutton"
        android:layout_below="@+id/main_chipotlebutton"
        android:layout_marginTop="75dp"
        android:layout_alignEnd="@+id/main_chipotlebutton"
        android:layout_alignStart="@+id/main_chipotlebutton" />

</RelativeLayout>
